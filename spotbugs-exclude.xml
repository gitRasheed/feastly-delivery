<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Ignore "Non-null field not initialized" - Kotlin handles this with default values/lateinit -->
    <Match>
        <Bug pattern="NP_NONNULL_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR"/>
    </Match>

    <!-- Ignore "Exposing internal representation" - Kotlin lists/maps are immutable by default -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Ignore "Questionable cast from Collection to List" - Kotlin .map returns List -->
    <Match>
        <Bug pattern="BC_BAD_CAST_TO_ABSTRACT_COLLECTION"/>
    </Match>
</FindBugsFilter>
